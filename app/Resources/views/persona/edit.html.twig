{% extends 'base.html.twig' %}

{% block body %}
<div class="row">
    <div class="col-xs-12 col-sm-8 col-md-6 col-sm-offset-2 col-md-offset-3">
        {{ form_start(edit_form) }}
        <h2>Cambie sus Datos Personales</h2>
        <hr class="colorgraph">
        <div class="row">
            <div class="col-xs-12 ">
                <div class="form-group">
                    {{ form_widget(edit_form.firstname) }}
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-xs-12 ">
                <div class="form-group">
                    {{ form_widget(edit_form.lastname) }}
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-xs-12 col-sm-6 col-md-6">
                <div class="form-group">
                    {{ form_widget(edit_form.birth) }}
                </div>
            </div>
            <div class="col-xs-12 col-sm-6 col-md-6">
                <div class="form-group">
                    {{ form_widget(edit_form.age) }}
                </div>
            </div>
        </div>
        <div class="row">
            <div class="2 col-sm-6 col-md-6">
                <div class="form-group">
                    {{ form_widget(edit_form.telefono.phone) }}
                </div>
            </div>
        </div>
        <hr class="colorgraph">
        <div class="row">
            <div class="col-xs-12 col-md-6">
                <input class="btn btn-primary btn-block btn-lg" tabindex="7" type="submit" value="Editar"/>  
            </div>
            <div class="col-xs-12 col-md-6">
                <a href="/persona/{{persona.id}}" class="btn btn-success btn-block btn-lg">Regresar</a>
            </div>
        </div>
    </div>
</div>
{% endblock %}
