{% extends 'base.html.twig' %}

{% block body %}
<div class="row">
    <div class="col-xs-12 col-sm-8 col-md-6 col-sm-offset-2 col-md-offset-3">
    {{ form_start(form) }}
    <h2>Complete sus Datos Personales</h2>
    <hr class="colorgraph">
    <div class="row">
        <div class="col-xs-12 ">
            <div class="form-group">
                {{ form_widget(form.firstname) }}
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-xs-12 ">
            <div class="form-group">
                {{ form_widget(form.lastname) }}
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-xs-12 col-sm-6 col-md-6">
            <div class="form-group">
                {{ form_widget(form.birth) }}
            </div>
        </div>
        <div class="col-xs-12 col-sm-6 col-md-6">
            <div class="form-group">
                {{ form_widget(form.age) }}
            </div>
        </div>
    </div>
    <div class="row">
        <div class="2 col-sm-6 col-md-6">
            <div class="form-group">
                {{ form_widget(form.telefono.phone) }}
            </div>
        </div>
    </div>
    <hr class="colorgraph">
    <div class="row">
        <div class="col-xs-12 col-md-6">
            <input class="btn btn-primary btn-block btn-lg" tabindex="7" type="submit" value="Guardar" />
        </div>
        <div class="col-xs-12 col-md-6">
            <a href="#" class="btn btn-success btn-block btn-lg">Entrar</a>
        </div>
    </div>
{{ form_end(form) }}
    </div>
</div>
{% endblock %}
